<div id="plot-page-content" class="carousel-page">
  <!-- Customization Dropdown and Plot Container Wrapper -->
  <div id="plot-customization">
    <!-- Dropdown Toggle Button and Options -->
    <div id="customization-menu">
      <button id="customization-toggle"><span>Customize Plot</span></button>
      <div id="customization-options">
        <h3>Customize Floor</h3>
        <select id="floor-options">
          <option value="cobblestone_floor">Cobblestone Floor</option>
          <option value="monastery_stone_floor">Monastery Stone</option>
          <option value="sparse_grass">Sparse Grass</option>
          <option value="wood_floor">Wood Floor</option>
        </select>

        <h3>Customize Walls</h3>
        <select id="wall-options">
          <option value="wooden_garage_door">Wooden Garage</option>
          <option value="stone_wall">Stone Wall</option>
          <option value="wooden_wall">Wooden Wall</option>
        </select>

        <h3>Furniture Catalog</h3>
        <select id="furniture-options">
          <option value="sofa">Sofa</option>
          <option value="coffeeTable01">Coffee Table - Blue</option>
          <option value="table">Table</option>
        </select>
        <button id="add-furniture" title="Add Furniture">+</button>
      </div>
    </div>

    <!-- Mode Indicator -->
    <div id="mode-indicator">Mode: Translate</div>

    <!-- Plot Container in Center -->
    <div id="plot-container"></div>
  </div>
</div>


<script type="module">
  console.log("Hello from show.html.erb");

  document.addEventListener("DOMContentLoaded", () => {
    // Check if we're on the plot page in the carousel
    const plotPage = document.querySelector('#plot-page-content');
    if (plotPage && plotPage.classList.contains('carousel-page')) {
      // Toggle customization dropdown
      document.getElementById("customization-toggle").addEventListener("click", () => {
        const options = document.getElementById("customization-options");
        options.style.display = options.style.display === "none" ? "block" : "none";
      });
    }
  });
</script>

<%= javascript_include_tag "application", type: "module", "data-turbo-track": "reload", defer: true %>
<%= tag.meta name: "turbo-visit-control", content: "reload" %>
