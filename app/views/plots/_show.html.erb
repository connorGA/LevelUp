<div id="plot-page-content" class="carousel-page" style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100vh;">
  <!-- Customization Dropdown and Plot Container Wrapper -->
  <div id="plot-customization" style="position: relative; width: 100%; height: 100%; display: flex; align-items: center; justify-content: center;">
    <!-- Dropdown Toggle Button and Options -->
    <div style="position: absolute; left: 20px; top: 20px;">
      <button id="customization-toggle" style="padding: 8px 16px; font-size: 16px;">Customize Plot</button>
      <div id="customization-options" style="display: none; margin-top: 10px; background-color: #f5f5f5; padding: 20px; border-radius: 5px; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);">
        <h3>Customize Floor</h3>
        <select id="floor-options" style="width: 100%;">
          <option value="cobblestone_floor">Cobblestone Floor</option>
          <option value="monastery_stone_floor">Monastery Stone</option>
          <option value="sparse_grass">Sparse Grass</option>
          <option value="wood_floor">Wood Floor</option>
        </select>

        <h3>Customize Walls</h3>
        <select id="wall-options" style="width: 100%;">
          <option value="wooden_garage_door">Wooden Garage</option>
          <option value="stone_wall">Stone Wall</option>
          <option value="wooden_wall">Wooden Wall</option>
        </select>

        <h3>Furniture Catalog</h3>
        <select id="furniture-options" style="width: 100%;">
          <option value="sofa">Sofa</option>
          <option value="coffeeTable01">Coffee Table - Blue</option>
          <option value="table">Table</option>
        </select>
        <button id="add-furniture" style="margin-top: 10px;">Add Furniture</button>
      </div>
    </div>

    <!-- Mode Indicator -->
    <div id="mode-indicator" style="
      position: absolute;
      top: 10px;
      right: 10px;
      padding: 8px;
      background: rgba(0, 0, 0, 0.5);
      color: white;
      font-size: 14px;
      border-radius: 5px;
      z-index: 1000;
      pointer-events: none;">
      Mode: Translate
    </div>

    <!-- Plot Container in Center -->
    <div id="plot-container" style="width: 100vw; height: calc(100vh - 60px);"></div>

  </div>
</div>

<script type="module">
  console.log("Hello from show.html.erb");

  document.addEventListener("DOMContentLoaded", () => {
    // Check if we're on the plot page in the carousel
    const plotPage = document.querySelector('#plot-page-content');
    if (plotPage && plotPage.classList.contains('carousel-page')) {
      // Toggle customization dropdown
      document.getElementById("customization-toggle").addEventListener("click", () => {
        const options = document.getElementById("customization-options");
        options.style.display = options.style.display === "none" ? "block" : "none";
      });
    }
  });
</script>

<%= javascript_include_tag "application", type: "module", "data-turbo-track": "reload", defer: true %>
