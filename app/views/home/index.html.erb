<div class="user-info">
  <h2 class="username">Welcome, <%= @user.username %>!</h2>
  <p class="level">Level: <%= @user.level %></p>
</div>

<div class="exp-bar">
  <div class="exp-progress" style="width: <%= @user.exp_percentage %>%;">
    <span class="exp-text">EXP: <%= @user.exp %> / <%= @user.exp_required %></span>
  </div>
</div>

<div class="main-container">
  <!-- Avatar and Plot Section -->
  <div class="interactive-landscape">
    <div id="avatar-section">
      <h2>Your Avatar</h2>
      <div id="avatar"></div>
    </div>

    <div id="plot-section">
      <h2>Your Plot</h2>
      <div id="plot"></div>
    </div>
  </div>
</div>

