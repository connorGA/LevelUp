<div class="app-container">
  <!-- Main Content Carousel -->
  <div class="carousel-container">
    <section id="tasks" class="carousel-page" style="background-image: url('<%= asset_path("backgrounds/purple.jpg") %>'); background-size: cover; background-position: center;">
       <%= render 'tasks/index' %>
    </section>

    <section id="avatar-page" class="carousel-page"> <!-- Avatar Section -->
        <%= render 'avatar/show' %>
    </section>

    <section id="plot-page" class="carousel-page"> <!-- Plot Section -->
      <%= render 'plots/show' %> 
    </section>

    <section id="friends" class="carousel-page"> <!-- Friends Section -->
      <h2>View Friends</h2>
      <!-- Friends viewing interface goes here -->
    </section>

    <section id="shop" class="carousel-page"> <!-- Shop Section -->
      <h2>Shop</h2>
      <!-- Shop interface goes here -->
    </section>
  </div>

  <!-- Bottom Navigation Bar -->
  <div class="bottom-nav">
    <button class="active">Tasks</button>
    <button>Avatar</button>
    <button>Plot</button>
    <button>Friends</button>
    <button>Shop</button> 
  </div>
</div>
